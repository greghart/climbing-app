{
  "compilerOptions": {
    "incremental": true, // fast
    "noEmit": true, // type check only

    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "es5", "scripthost", "es6"],
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*",
          "./test/*",
          "./tools/*"
      ]
    }
  },
  "include": [
    "./src/typescript/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
